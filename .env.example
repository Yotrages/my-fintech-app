# FinTech Mobile App - Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
# Set this to your backend API URL
# For local development: http://192.168.1.x:5000/api/v1 (use your machine IP, not localhost for physical devices)
# For staging: https://staging-api.yourdomain.com/api/v1
# For production: https://api.yourdomain.com/api/v1
EXPO_PUBLIC_API_URL=http://localhost:5000/api/v1

# Socket.IO Configuration (Real-time notifications, transactions)
EXPO_PUBLIC_SOCKET_URL=http://localhost:5000

# Cloud Storage Configuration (Cloudinary)
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Analytics & Crash Reporting (Optional)
EXPO_PUBLIC_SENTRY_DSN=

# Environment
EXPO_PUBLIC_ENV=development

# Feature Flags (Enable/disable features)
EXPO_PUBLIC_ENABLE_TESTNET=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# Stripe Configuration (For payment processing)
EXPO_PUBLIC_STRIPE_KEY=pk_test_your_publishable_key_here

# Build Configuration
EXPO_PUBLIC_BUILD_VERSION=1.0.0
EXPO_PUBLIC_BUILD_ENVIRONMENT=development
